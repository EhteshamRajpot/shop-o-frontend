{
    "compilerOptions": {
      "allowImportingTsExtensions": true,
      "target": "es5",
      "lib": ["dom", "es2015"],
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "typeRoots": ["./src", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/components/Login/Login.tsx", "src/styles/styles.tsx", "src/server.tsx", "src/server.d.ts", "src/static/data.tsx"],
    "exclude": ["node_modules"]
  }
  